@model IEnumerable<CRConsultMvc.Models.Gettoni>

@{
    ViewBag.Title = "Index";
}
<div class="container">
    <h2 >Gettoni @ViewBag.Utente
</h2>

    <p>
        <a href="@Url.Action("Create", "Gettonis", new {uid = ViewBag.Uid })" class="btn btn-crc"><span class="badge">@ViewBag.GettoniCount </span> Aggiungi</a>
    </p>
    <hr class="hr1" />    <table class="table table-hover">
        <thead>

            <tr>
                <th>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Data)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NGettoni)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Totale)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Pagato)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome.UserName)
                         [@Html.DisplayFor(modelItem => item.Nome.Nome)
                        @Html.DisplayFor(modelItem => item.Nome.Cognome)]
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Data)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NGettoni)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Totale)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Pagato)
                    </td>
                    <td>
                        @Html.ActionLink(" ", "Edit", new { id = item.Gettone_id }, new { @class = "fa fa-pencil fa-2x" })
                        @Html.ActionLink(" ", "Delete", new { id = item.Gettone_id }, new { @class = "fa fa-trash fa-2x text-danger " })


                    </td>
                </tr>
            }
        </tbody>

    </table>

</div>
