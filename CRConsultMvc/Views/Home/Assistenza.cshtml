@model CRConsultMvc.Models.EmailEsperto
@{
    ViewBag.Title = "Assistenza";
}

<h1 class="text-center">Assistenza<br/>
   </h1>

<div class="row div-assistenza">
    <div class="col-sm-6">

    </div>
    <div class="col-sm-6 text-center">
        <h3 class="alert alert-info">Privati/nuovi clienti</h3>
        <a role="button" data-toggle="modal" href="#modalass" aria-expanded="false" aria-controls="modalass">
            <h3><span class="fa fa-street-view fa-2x"></span> Contatta un esperto</h3>
        </a>
        <hr class="hrl" />
        <h3 class="alert alert-info">Clienti con contratto</h3>
        <a href="@Url.Action("Riservata", "Interventis")"><h3 ><span class="fa fa-user fa-2x"></span> Entra nell'area riservata</h3></a>
        <hr class="hrl" />
        <h3 class="alert alert-info">Vuoi attivare un contratto?</h3>
        <a href="@Url.Action("FormContratto", "Home")"><h3><span class="fa fa-paste fa-2x"></span> Chiedi informazioni</h3></a>

        <!-- Modal -->
        <div class="modal fade" id="modalass" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">Contatta un esperto</h4>
                    </div>
                    <div class="modal-body">
                        <div>
                            Lascia i tuoi dati e verrai contattato da un nostro incaricato.<br/>
                            La richiesta di contatto è <span class="text-danger">completamente gratuita.</span>
                            Inviando la form <span class="text-danger">non prendi nessun impegno economico</span>, la tua richiesta verrà presa in carico da uno specialista e i dati inseriti verranno trattati secondo la <a target="_blank" href="@Url.Action("Privacy", "Home")">Privacy Policy</a>
                        </div>
                        @using (Html.BeginForm("FormEsperto", "Home", null, FormMethod.Post, new { @class = "form-horizontal" }))
            {
                            @Html.AntiForgeryToken()
                            <div class="modal-body">
                                <div class="form-group">
                                    <div class="col-sm-12">
                                        @Html.TextBoxFor(m => m.Nome, new { @class = "form-control center-block", placeholder = "Nome Cognome", required = "required" })
                                        @Html.ValidationMessageFor(m => m.Nome, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-12">
                                        @Html.TextBoxFor(m => m.Ditta, new { @class = "form-control center-block", placeholder = "Intestazion ditta (facoltativo)" })
                                        @Html.ValidationMessageFor(m => m.Ditta, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-12">
                                        @Html.TextBoxFor(m => m.Telefono, new { @class = "form-control center-block", placeholder = "Telefono / cellulare", required = "required" })
                                        @Html.ValidationMessageFor(m => m.Telefono, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-12">
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control center-block", placeholder = "La tua mail", required = "required" })
                                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-12">
                                        @Html.TextAreaFor(m => m.Richiesta, new { @class = "form-control center-block", placeholder = "Scrivi qui il tuo messaggio", required = "required" })
                                        @Html.ValidationMessageFor(m => m.Richiesta, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-12">
                                        @Html.CheckBoxFor(m => m.Privacy, new { @class = "chekbox", required = "required" })
                                        @Html.ValidationMessageFor(m => m.Privacy, "", new { @class = "text-danger" })
                                        Accetta documento privacy
                                        <br /><a href="/Home/Privacy" target="_blank">Leggi il documento</a>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <div class="g-recaptcha" data-sitekey="6Lfl-0MUAAAAAMsYisTLnizioT9DoJpTGtSZ8lSx">
                                </div>
                                @ViewBag.Message
                                <input type="submit" class="btn btn-success" value="Invia" />
                            </div>
                        }


                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
